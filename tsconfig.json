{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "importHelpers": true,
    "declaration": true,
    "declarationDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["jest"],
    "paths": {
      "@/*": ["lib/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "lib/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "test-utils/**/*.ts",
    "test-utils/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
